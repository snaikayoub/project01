<div id="carouselExampleCaptions" class="carousel slide py-2" data-bs-ride="carousel slide" data-wrap="true">

      <div class="carousel-indicators">
        {% for carousel in carousels %}
        {% if loop.index == 1 %}
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{loop.index-1}}" class="active" aria-current="true" aria-label="Slide {{loop.index}}"></button>
        {% else %}
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{loop.index-1}}" aria-label="Slide {{loop.index}}"></button>
        {% endif %}
        {% endfor %}
      </div>

      <div class="carousel-inner">
        
        {% for carousel in carousels %}
        {% if loop.index == 1 %}
          <div class="carousel-item active" data-bs-interval="4000">
        {% else %}
          <div class="carousel-item " data-bs-interval="4000">
        {% endif %}
          <img src="{{ vich_uploader_asset(carousel, 'imageFile')| imagine_filter('my_thumb_carousel') }}" class="d-block w-100" alt="{{ carousel.nom}}">
          <div class="carousel-caption d-none d-md-block">
            <h5>{{ carousel.nom}} </h5>
            <p>{{carousel.description}}</p>
          </div>
        </div>

        {% endfor %}

      </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>